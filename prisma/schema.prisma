generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  fullName  String
  email     String   @unique
  password  String   // hashed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // This user owns rooms/renters (multi-tenancy)
  rooms     Room[]
  renters   Renter[]
  sessions  Session[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("sessions")
}

model Room {
  id          String   @id @default(cuid())
  name        String
  ownerId     String?
  owner       User?    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  renters     Renter[]
  rentPayments RentPayment[]
  
  @@map("rooms")
}

model Renter {
  id          String   @id @default(cuid())
  fullName    String
  phone       String
  nationalId  String
  ownerId     String?
  owner       User?    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  
  moveInYear  Int
  moveInMonth Int // 0-11 (Ethiopian months, 0=Meskerem)
  moveInDay   Int // 1-30
  
  moveOutYear  Int?
  moveOutMonth Int?
  moveOutDay   Int?
  
  photoUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  rentPayments RentPayment[]

  @@unique([ownerId, nationalId])
  
  @@map("renters")
}

model RentPayment {
  id          String   @id @default(cuid())
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  renterId    String?
  renter      Renter?  @relation(fields: [renterId], references: [id], onDelete: SetNull)
  
  year        Int
  monthIndex  Int // 0-11 (Ethiopian months, 0=Meskerem, 12=Pagume)
  isPaid      Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([roomId, year, monthIndex])
  @@map("rent_payments")
}
